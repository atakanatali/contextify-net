{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Contextify": {
    "Policy": {
      "AllowByDefault": false,
      "Whitelist": [
        {
          "ToolName": "hello",
          "RouteTemplate": "/hello",
          "HttpMethod": "GET",
          "Description": "Say hello to someone",
          "Parameters": {
            "name": {
              "Type": "string",
              "Description": "The name to greet"
            }
          }
        }
      ]
    }
  }
}