{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "Contextify": {
        "ToolExecutor": {
            "DefaultTimeoutSeconds": 10
        },
        "Policy": {
            "AllowByDefault": false,
            "Whitelist": [
                {
                    "ToolName": "get_todo",
                    "RouteTemplate": "https://jsonplaceholder.typicode.com/todos/{id}",
                    "HttpMethod": "GET",
                    "Description": "Get a Todo item by ID",
                    "Parameters": {
                        "id": {
                            "Type": "integer",
                            "Description": "The ID of the todo item"
                        }
                    }
                }
            ]
        }
    }
}